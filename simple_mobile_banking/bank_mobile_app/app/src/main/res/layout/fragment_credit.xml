<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CreditFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="900dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#EFEDED"
        app:cardCornerRadius="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1000dp"
            >

            <TextView
                android:id="@+id/textView6"
                android:layout_width="249dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"

                android:gravity="center"

                android:layout_marginTop="30dp"
                android:fontFamily="@font/montserrat_alternates_bold"
                android:text="Take credit"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/credit_rules"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="120dp"
                android:fontFamily="@font/montserrat_alternates_bold"
                android:gravity="center"
                android:text="Read rules"

                android:textSize="18sp"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="@id/textView6"
                tools:ignore="UsingOnClickInXml" />

            <EditText
                android:id="@+id/salary_id"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"

                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="170dp"
                android:background="@color/white"
                android:ems="10"
                android:fontFamily="@font/montserrat_alternates"
                android:hint="your monthly salary"
                android:inputType="number"
                android:minHeight="48dp"
                android:paddingStart="10dp"

                android:textColorHint="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.097"
                app:layout_constraintStart_toStartOf="@id/textView6" />

            <EditText
                android:id="@+id/pledge_id"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="235dp"
                android:background="@color/white"
                android:ems="10"
                android:fontFamily="@font/montserrat_alternates"
                android:hint="consumer/mortgage"
                android:inputType="text"
                android:minHeight="48dp"
                android:paddingStart="10dp"
                android:textColorHint="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.097"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/salary_id" />

            <EditText
                android:id="@+id/price_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="300dp"
                android:background="@color/white"
                android:ems="10"
                android:fontFamily="@font/montserrat_alternates"
                android:hint="Price"
                android:paddingStart="10dp"

                android:inputType="number"
                android:minHeight="48dp"
                android:textColorHint="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.097"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pledge_id" />

            <EditText
                android:id="@+id/paid_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="365dp"
                android:background="@color/white"
                android:ems="10"
                android:fontFamily="@font/montserrat_alternates"
                android:hint="First payment"
                android:inputType="number"
                android:minHeight="48dp"
                android:paddingStart="10dp"
                android:textColorHint="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.097"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pledge_id" />

            <Button
                android:id="@+id/button_credit"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="90dp"
                android:layout_marginTop="450dp"
                android:textColor="@color/white"
                android:layout_marginBottom="50dp"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/montserrat_alternates_bold"
                android:onClick="login"
                android:text="send"
                app:cornerRadius="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent" />

        </RelativeLayout>




    </androidx.cardview.widget.CardView>

</ScrollView>



</FrameLayout>